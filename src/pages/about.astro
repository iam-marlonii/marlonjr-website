---
import MainLayout from '../layouts/MainLayout.astro';
import MarlonAusbyJuniorProfilePicture from '../assets/about/WaterSideHeadshot.png?url';
import { getIconWithColor, iconMap } from '../config/icons';

const skyBlue = '#69d7f2';
---

<MainLayout>
	<!-- <MainMenu /> -->

	<section class="relative flex flex-col items-center w-full h-full">
		<container class="relative z-10 w-full max-w-[1080px] h-full flex items-top justify-center mx-2">
			<!-- Picture, Location, and Languages -->
			<div class="sticky top-[80px] flex flex-col items-center w-1/3 h-[calc(100vh-1000px)] p-4 gap-4">
				<img 
					src={MarlonAusbyJuniorProfilePicture}
					alt="Marlon Ausby Junior Profile Picture"
					class="w-[11em] h-auto rounded-full border border-(--color-skyBlue)/40"
				/>
				<div class="flex items-center gap-1">
					<span class="w-6 h-6 flex shrink-0" set:html={getIconWithColor('location', '#ff9689')} />
					Florida, USA
				</div>
				<div class="flex flex-col items-center">
					<div class="flex items-center text-sm px-3 py-1 bg-black border border-(--color-skyBlue)/40 rounded-md">
						English
					</div>
				</div>
			</div>
			<!-- Description Section -->
			<div class="flex flex-col items-baseline w-2/3 h-full p-4 gap-8">
				<!-- Schedule a call Button -->
				<div class="cursor-pointer relative flex items-center pr-1 pl-3 py-1 gap-2 border-2 border-(--color-skyBlue)/40 hover:border-(--color-skyBlue) transition-colors duration-200 bg-black rounded-full">
					<span class="w-6 h-6 flex shrink-0" set:html={getIconWithColor('calendar', skyBlue)} />
					Schedule a call
					<div class="flex items-center justify-center p-1 border-2 border-(--color-timberwolf)/40 transition-colors duration-200 rounded-full">
						<span class="w-5 h-5 flex shrink-0" set:html={getIconWithColor('chevron-right', 'currentColor')} />
					</div>
				</div>
				<!-- Name, Title, and Social Links -->
				<div class="relative flex flex-col">
					<h1 class="text-[4em] font-medium leading-none">
						Marlon Ausby
					</h1>
					<h2 class="text-[2em] font-light text-(--color-gray)">
						Software Engineer
					</h2>
					<!-- Social Links -->
					<div class="flex gap-2">
						<a href="/" class="social-button">
							<span class="w-4 h-4 flex shrink-0" set:html={getIconWithColor('github', skyBlue)} />
							GitHub
						</a>
						<a href="/" class="social-button">
							<span class="w-4 h-4 flex shrink-0" set:html={getIconWithColor('linkedin', skyBlue)} />
							LinkedIn
						</a>
						<a href="/" class="social-button">
							<span class="w-4 h-4 flex shrink-0" set:html={getIconWithColor('twitter', skyBlue)} />
							Twitter
						</a>
						<a href="/" class="social-button">
							<span class="w-4 h-4 flex shrink-0" set:html={getIconWithColor('instagram', skyBlue)} />
							Instagram
						</a>
					</div>
				</div>
				<!-- Summary -->
				<div class="flex flex-col mb-10">
					<p class="text-lg text-(--color-platinum)">
						With 6+ years of experience building secure, data-driven systems in fintech and cloud environments. 
						Specialized in payment processing, PCI-compliant architectures, large-scale data migrations, and fraud detection. 
						Background in biomedical sciences brings a rigorous, analytical approach to designing reliable, scalable applications.
					</p>
				</div>
				<!-- Skills -->
				<div>
					<div class="flex flex-col gap-5">
						<div class="flex">
							<h3 class="sub-heading">
								Technical Skills
							</h3>
						</div>
						<!-- Languages -->
						<div class="flex flex-col gap-2">
							<h4 class="leading-none text-[1.5em] text-(--color-platinum) font-medium">
								Languages
							</h4>
							<p class="sub-description">
								Building applications and solving problems with:
							</p>
							<div class="flex gap-2">
								<div class="skill-tab">
									<span class="w-3 h-3 flex shrink-0" set:html={getIconWithColor('javascript', skyBlue)} />
									JavaScript
								</div>
								<div class="skill-tab">
									<span class="w-3 h-3 flex shrink-0" set:html={getIconWithColor('typescript', skyBlue)} />
									TypeScript
								</div>
								<div class="skill-tab">
									<span class="w-5 h-5 flex shrink-0" set:html={getIconWithColor('python', skyBlue)} />
									Python
								</div>
								<div class="skill-tab">
									<span class="w-6 h-6 flex shrink-0" set:html={getIconWithColor('go', skyBlue)} />
									Go
								</div>
							</div>
							<div class="flex gap-2">
								<div class="skill-tab">
									<span class="w-5 h-5 flex shrink-0" set:html={getIconWithColor('sql', skyBlue)} />
									SQL
								</div>
								<div class="skill-tab">
									<span class="w-5 h-5 flex shrink-0" set:html={getIconWithColor('html5', skyBlue)} />
									HTML
								</div>
								<div class="skill-tab">
									<span class="w-6 h-6 flex shrink-0" set:html={getIconWithColor('css3', skyBlue)} />
									CSS
								</div>
							</div>
						</div>
						<!-- Frameworks -->
						<div class="flex flex-col gap-2">
							<h4 class="leading-none text-[1.5em] text-(--color-platinum) font-medium">
								Frameworks
							</h4>
							<p class="sub-description">
								Building applications with:
							</p>
							<div class="flex gap-2">
								<div class="skill-tab">
									<span class="w-4 h-4 flex shrink-0" set:html={getIconWithColor('nextjs', skyBlue)} />
									Next.js
								</div>
								<div class="skill-tab">
									<span class="w-5 h-5 flex shrink-0" set:html={getIconWithColor('react', skyBlue)} />
									React
								</div>
								<div class="skill-tab">
									<span class="w-5 h-5 flex shrink-0" set:html={getIconWithColor('flutter', skyBlue)} />
									Flutter
								</div>
								<div class="skill-tab">
									<span class="w-5 h-5 flex shrink-0" set:html={getIconWithColor('astro', skyBlue)} />
									Astro.js
								</div>
							</div>
							<div class="flex gap-2">
								<div class="skill-tab">
									<span class="w-4 h-4 flex shrink-0" set:html={getIconWithColor('tailwind', skyBlue)} />
									Tailwind
								</div>
							</div>
						</div>
						<!-- Databases -->
						<div class="flex flex-col gap-2">
							<h4 class="leading-none text-[1.5em] text-(--color-platinum) font-medium">
								Databases
							</h4>
							<p class="sub-description">
								Building applications with:
							</p>
							<div class="flex gap-2">
								<div class="skill-tab">
									<span class="w-5 h-5 flex shrink-0" set:html={getIconWithColor('mysql', skyBlue)} />
									MySQL
								</div>
								<div class="skill-tab">
									<span class="w-5 h-5 flex shrink-0" set:html={iconMap['postgresql']} />
									PostgreSQL
								</div>
								<div class="skill-tab">
									<span class="w-5 h-5 flex shrink-0" set:html={getIconWithColor('supabase', skyBlue)} />
									Supabase
								</div>
							</div>
						</div>
						<!-- Cloud & DevOps -->
						<div class="flex flex-col gap-2">
							<h4 class="leading-none text-[1.5em] text-(--color-platinum) font-medium">
								Cloud & DevOps
							</h4>
							<p class="sub-description">
								Building applications with:
							</p>
							<div class="flex gap-2">
								<div class="skill-tab">
									<span class="w-5 h-5 flex shrink-0" set:html={getIconWithColor('aws', skyBlue)} />
									AWS
								</div>
								<div class="skill-tab">
									<span class="w-5 h-5 flex shrink-0" set:html={getIconWithColor('docker', skyBlue)} />
									Docker
								</div>
								<div class="skill-tab">
									<span class="w-4 h-4 flex shrink-0" set:html={getIconWithColor('proxmox', skyBlue)} />
									Proxmox
								</div>
							</div>
						</div>
						<!-- Payments & Security -->
						<div class="flex flex-col gap-2">
							<h4 class="leading-none text-[1.5em] text-(--color-platinum) font-medium">
								Payments & Securities
							</h4>
							<p class="sub-description">
								Building applications with:
							</p>
							<div class="flex gap-2">
								<div class="skill-tab">
									<span class="w-4 h-4 flex shrink-0" set:html={getIconWithColor('stripe', skyBlue)} />
									Stripe
								</div>
								<div class="skill-tab">
									<span class="w-4 h-4 flex shrink-0" set:html={getIconWithColor('shield', skyBlue)} />
									PCI 1
								</div>
								<div class="skill-tab">
									<span class="w-4 h-4 flex shrink-0" set:html={getIconWithColor('vaulted-data', skyBlue)} />
									Vaulted Data
								</div>
							</div>
						</div>
					</div>
				</div>
				<!-- Experience -->
				<div>
					<h3 class="sub-heading">
						Professional Experience
					</h3>
				</div>
				<!-- Education -->
				<div>
					<h3 class="sub-heading">
						Education
					</h3>
				</div>
			</div>
		</container>
	</section>

	<!-- <FooterMenu /> -->
</MainLayout>

<style>

	.sub-description {
		color: var(--color-Gray);
	}
	.social-button {
  		cursor: pointer;
		position: relative;
		display: flex;
		align-items: center;
		font-size: 0.875rem;
		line-height: 1.25rem;
		padding: 0.25rem 0.75rem;
		background-color: black;
		border: 2px solid color-mix(in srgb, var(--color-skyBlue) 20%, transparent);
		border-radius: 9999px;
		gap: 0.25rem;
		transition: border-color 200ms, color 200ms, background-color 200ms;
	}

	.social-button:hover {
		border-color: var(--color-skyBlue);
	}

	.skill-tab {
		position: relative;
		display: flex;
		align-items: center;
		font-size: 0.875rem;
		line-height: 1.25rem;
		padding: 0.25rem 0.75rem;
		background-color: black;
		border: 1px solid color-mix(in srgb, var(--color-skyBlue) 20%, transparent);
		border-radius: 5px;
		gap: 0.3rem;
		transition: border-color 200ms, color 200ms, background-color 200ms;
	}

	.sub-heading {
		font-size: 2.5em;
		font-weight:400;
	}

	.sub-title {

	}

</style>